<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#00ffffff"
                android:src="@mipmap/CNS_arrow_foreground"></ImageButton>

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="70dp"
                android:background="#00ffffff"
                android:src="@mipmap/CNS_user"
                android:layout_marginLeft="265dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="대표키워드"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text=":우회전"
                android:textSize="22dp">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#FAED7D"
            android:text="특수공무집행방해치상/특수공무집행방해/일반교통방해/집회및시위에관한법률위반/모욕"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:background="#FAED7D"
            android:text="[1] 집회 및 시위에 관한 법률에 의하여 보장 및 규제의 대상이 되는 '집회'의 의미 / 미신고 옥외집회 또는 시위를 대상으로 같은 법 제 20조 제 1항 제 2호에 기하여 해산을"
            android:textSize="15dp"></TextView>

        <TextView
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="#FAED7D"
            android:text="도로교통법위반"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="373dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="#FAED7D"
            android:text="피고인이 차량 보조 신호등이 설치된 교차로에서 신호를 위반하여 우회전하였다고 하여 도로교통법 위반으로 기소된 사안에서, 차량 보조 신호등이 적색등인 경우 차량에 대하여 횡단보도 직전에 정지할 것과 우회전"
            android:textSize="15dp">
        </TextView>

        <TextView
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="#FAED7D"
            android:text="교통사고처리 특례법 위반"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="373dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:background="#FAED7D"
            android:text="[1] 교차로 직전의 횡단보도에 따로 차량보조등이 설치되어 있지 아니한 경우, 교차로 차량신호등이 적색이고 횡단보도 보행등이 녹색인 상태에서 횡단보도를 지나 우회전하다가 업무상과실치상의 결과가 발생하면 교통사고처리 특례법 제 3조"
            android:textSize="15dp">
        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>